@page
@model Microsoft.AspNetCore.Mvc.RazorPages.PageModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<style>
    body {
        background-color: #000;
        color: white;
        font-family: 'Arial', sans-serif;
    }

    .container {
        margin-top: 50px;
    }

    .alert {
        background-color: #222;
        color: #ffcc00;
        padding: 20px;
        border-radius: 5px;
    }

    a.btn-home {
        margin-top: 20px;
        display: inline-block;
        background-color: darkred;
        color: white;
        padding: 10px 15px;
        border-radius: 5px;
        text-decoration: none;
    }
</style>

<div class="container text-center">
    <h1>Forgot your password?</h1>
    <div class="alert">
        Password resets are managed manually.<br />
        Please contact the admin via the <strong>Contact Form</strong> or <strong>Discord</strong> for assistance.
    </div>
    <a class="btn-home" href="/">Return to Homepage</a>
</div>
